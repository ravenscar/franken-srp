{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/_cognito-test-config.ts", "**/test"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2017", "ESNext.BigInt"],
    "target": "ES2017",
    "types": ["jest", "node"],
    "noErrorTruncation": true,
    "resolveJsonModule": true
  }
}
